<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/css/chatroom.css">
    <link rel="stylesheet" href="/public/css/styles.css">
    <title>chatApp</title>
    <script src="/public/js/socket.io.min.js" defer></script>
    <script src="/public/js/chatroom/chatroom.js" type="module" defer></script>
</head>

<body onload="chatttBox()">
    <div class="all">
        <div class="fixed top-0 right-0 left-0 h-12 bg-white z-10 flex justify-center items-center shadow">
            <p class="text-center text-pink-800">Online: &nbsp; <span id="onlines"></span></p>
        </div>
        <div id="chat-box" class="flex flex-col items-center gap-3 pt-20 pb-32 px-2 bg-fixed bg-gradient-to-br from-pink-50 to-pink-300">
            <% for(let i of data){ %>

                <div
                    ondblclick="replay(this)"
                    data-messageId="<%= i._id %>"
                    class="flex flex-col items-stretch gap-1.5 bg-white px-4 py-1.5 rounded-t-xl rounded-br-xl shadow select-none">
                    <div class="flex flex-row gap-3 items-stretch w-full">
                        <span class="text-gray-500 text-xs" name>
                            <%= i.name %>
                        </span>
                        <span class="text-gray-500 text-xs">
                            <%= i.time %>
                        </span>
                    </div>
                    <% if (i.replayedTo) { %>
                        <div dir="auto" replay data-messageId="<%= i.replayedTo %>" class="text-sm text-gray-400">
                            Please wait ...
                        </div>
                    <% } %>
                    <p dir="auto" class="text-gray-700">
                        <%= i.message %>
                    </p>
                </div>

                <% } %>
        </div>
        <div class="fixed bottom-0 right-0 left-0 flex flex-col z-10">
            <div id="replayBox" class="flex-row gap-4 items-center w-full p-3 bg-white text-black hidden border-solid border-b-gray-300 border-b-2">
                <p dir="auto" class="grow">سلام داداش</p>
                <button class="" onclick="unReplay()">x</button>
            </div>
            <form id="chat-Form" class="w-full flex flex-row">
                <input placeholder="Message text ..." name="message" id="message-Input" type="text"
                    class="grow p-4 bg-white border-solid border-t-gray-300 border-t-2" />
                <button type="submit"
                    class="bg-pink-500 hover:bg-pink-600 text-white p-4 transition duration-300">Send</button>
            </form>
        </div>
        
    </div>
</body>
</html>